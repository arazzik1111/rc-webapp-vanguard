{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,

    /* TypeScript 7 / tsgo optimizations */
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo-app",

    /* Linting */
    "strict": true,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "outDir": "./dist-app",        // Output directory for compiled files
    "declaration": true,       // Generate declaration files
    "declarationMap": true,    // Generate sourcemaps for declarations
    "emitDeclarationOnly": false, // Emit JavaScript and declaration files
    "skipLibCheck": true,      // Skip type checking of library declaration files
    "paths": {
      "@common/*": [
        "./src/common",
        "./src/common/*"
      ],
      "@models/*": [
        "./src/models",
        "./src/models/*"
      ],
      "@test-utils/*": [
        "./src/test-utils",
        "./src/test-utils/*"
      ],
      "@services/*": [
        "./src/services",
        "./src/services/*"
      ],
      "@stores/*": [
        "./src/stores",
        "./src/stores/*"
      ],
      "@helpers/*": [
        "./src/helpers",
        "./src/helpers/*"
      ],
      "@vanguard/*": [
        "./src/core",
        "./src/core/*"
      ],
      "@config/*": [
        "./config",
        "./config/*"
      ],
      "@custom-hooks/*": [
        "./src/custom-hooks",
        "./src/custom-hooks/*"
      ],
      "@styles/*": [
        "./src/styles",
        "./src/styles/*"
      ],
      "@globalStyles.module.scss": [
        "./src/styles/general.module.scss"
      ],
      "@globalStyles": [
        "./src/styles/general.module.tsx"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    // "core",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
